<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="@drawable/gradientres">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--Back button at the top -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">
                <ImageButton
                    android:id="@+id/backButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_chevron_left_black_30dp">
                </ImageButton>
        </LinearLayout>



        <!--Title and cityscape-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Global Carbon Footprint"
                android:layout_marginLeft="18dp"
                android:textSize="32dp">
            </TextView>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="3dp"
            android:textSize="35px"
            android:textStyle="italic"
            android:gravity="center"
            android:text="About three-quarters of all gas emissions result from humans' consumption of fossil fuels.">
        </TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/city"
                android:scaleX="2.2">
            </ImageView>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="12dp"
            android:textSize="20dp"
            android:text="How much carbon am I consuming?"
            android:textStyle="italic"
            android:layout_marginBottom="12dp"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--average person row-->
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/person"
                    android:layout_width="124dp"
                    android:layout_height="50dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/person">
                </ImageView>

                <TextView
                    android:layout_width="124dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="Average Person">
                </TextView>

                <TextView
                    android:layout_width="124dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="120 lbs of CO2 per day">
                </TextView>
            </TableRow>

            <!--first row-->
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/bike"
                    android:layout_width="124dp"
                    android:layout_height="50dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/car">
                </ImageView>

                <TextView
                    android:layout_width="124dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="Vehicles">

                </TextView>

                <TextView
                    android:layout_width="124dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="19.4lbs of CO2 per gallon">
                </TextView>
            </TableRow>

            <!--second row-->
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/bus"
                    android:layout_width="124dp"
                    android:layout_height="50dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/bus">
                </ImageView>

                <TextView
                    android:layout_width="124dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="Public Transportation">
                </TextView>

                <TextView
                    android:layout_width="124dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="19.4lbs of CO2 per gallon">
                </TextView>
            </TableRow>

            <!--third row-->
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/plane"
                    android:layout_width="124dp"
                    android:layout_height="50dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/plane">
                </ImageView>

                <TextView
                    android:layout_width="124dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="Air Travel">
                </TextView>

                <TextView
                    android:layout_width="124dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="1.12lbs of CO2 per mile traveled">
                </TextView>
            </TableRow>

            <!--fourth row-->
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/meat"
                    android:layout_width="124dp"
                    android:layout_height="50dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/meat">
                </ImageView>

                <TextView
                    android:layout_width="124dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="Meat and Eggs">
                </TextView>

                <TextView
                    android:layout_width="124dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="38.3 lbs of CO2 per dollar spent">
                </TextView>
            </TableRow>

            <!--fifth row-->
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/bakery"
                    android:layout_width="124dp"
                    android:layout_height="50dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/bakery">
                </ImageView>

                <TextView
                    android:layout_width="124dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="Bakery Products">
                </TextView>

                <TextView
                    android:layout_width="124dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="19.6 lbs of CO2 per dollar spent">
                </TextView>
            </TableRow>

            <!--sixth row-->
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/fruit"
                    android:layout_width="124dp"
                    android:layout_height="50dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/fruit">
                </ImageView>

                <TextView
                    android:layout_width="124dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="Fruits and Vegetables">
                </TextView>

                <TextView
                    android:layout_width="124dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="31.0 lbs of CO2 per dollar spent">
                </TextView>
            </TableRow>

            <!--seventh row-->
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <ImageView
                    android:id="@+id/dairy"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/dairy">
                </ImageView>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="Dairy">
                </TextView>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="50.5 lbs of CO2 per dollar spent">
                </TextView>
            </TableRow>

        </TableLayout>
    </LinearLayout>
</ScrollView>

